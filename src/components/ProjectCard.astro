---
import ChevronRight from "../icons/chevron-right.svelte";
import type { ProjectFrontMatter } from "../types";
import ProjectImage from "./ProjectImage.astro";

interface Props extends ProjectFrontMatter {
  path: string;
}

const { title, type, image, description, path } = Astro.props;
---

<a
  class="flex cursor-pointer flex-row items-center justify-between rounded-xl border-2 border-glass p-3 hover:border-glass-hover"
  href={path}>
  <div class="flex flex-row items-center gap-3">
    <div class="p-1">
      <ProjectImage>
        <img src={image} />
      </ProjectImage>
    </div>
    <div>
      <div class="mb-1 text-lg font-semibold leading-6">{title}</div>
      <span>{type.toString()} â€¢ {description}</span>
    </div>
  </div>
  <ChevronRight />
</a>
